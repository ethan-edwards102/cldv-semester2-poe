@model ABCRetails.Models.CreateProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="border rounded-3 overflow-hidden p-3" tyle="width: 80%; margin: 0 auto;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Create Product</h1>
        <a class="btn btn-primary" asp-action="Index">ü°ê Back</a>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" type="number" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-group pt-1">
                    <label asp-for="ImageFile" class="form-label"></label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <div class="invalid-feedback">Please provide a valid image.</div>
                </div>
                
                <div class="form-group pt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
