@model IEnumerable<ABCRetails.Models.Customer>

@{
    ViewData["Title"] = "All Customers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Customers</h2>
    <a class="btn btn-primary" asp-action="Create">+ Add</a>
</div>

<div class="border rounded-3 overflow-hidden">
    <table class="table m-0">
        <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DeliveryAddress)
            </th>
            
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryAddress)
                </td>
                
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RowKey">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.RowKey">Details</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.RowKey">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>