@model IEnumerable<ABCRetails.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
                
        <th>
            @Html.DisplayNameFor(model => model.PhotoURL)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </th>
        
        <th>
            <!-- Item Controls -->
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.PhotoURL)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAddress)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.RowKey">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RowKey">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RowKey">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>