@model ABCRetails.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="border rounded-3 overflow-hidden p-3" style="margin: 0 auto;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Create Order</h1>
        <a class="btn btn-primary" asp-action="Index">ü°ê Back</a>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProductRowKey" class="control-label"></label>
                    <select asp-for="ProductRowKey" class="form-select" asp-items="ViewBag.ProductRowKey"></select>
                    <span asp-validation-for="ProductRowKey" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="CustomerRowKey" class="control-label"></label>
                    <select asp-for="CustomerRowKey" class="form-select" asp-items="ViewBag.CustomerRowKey"></select>
                    <span asp-validation-for="CustomerRowKey" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" type="number" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                
                <div class="form-group pt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>